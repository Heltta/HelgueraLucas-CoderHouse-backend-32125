include formInputField.pug

form(action="/signup" method="post" class="p-5" id="session_signup")
    +formInputField(
        'Email',
        'userEmail',
        'email'
    )
    +formInputField(
        'Username',
        'userName',
        'text'
    )
    +formInputField(
        'Set password',
        'userPassword',
        'password'
    )
    +formInputField(
        'Confirm Password',
        'confirmPassword',
        'password'
    )
    input(type="submit" value="Sign In" class="btn btn-primary")
