
<%- include('./partials/document'); %>
<%- include('./partials/pageTitle',{ pageName:"Vista de productos"}); %>
<section class="p-5">
    <% if (listExists()) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach( item => { %>
                    <tr>
                        <th scope="row"><%= item.id %></th>
                        <td><%= item.title %></td>
                        <td><%= item.price %></td>
                        <td><img 
                            src=<%= item.thumbnail %>
                            alt=<%= item.title %>
                            width="64" height="64">
                        </img></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% }else{ %>
    <p class="bg-warning border border-warning rounded p-2" style="--bs-bg-opacity: .2;">
        No se encontraron items
    </p>
    <% } %>
    <%- include('./partials/redirectBtn',{ link:"/", name:"Ingresar productos"}); %>
</section>

<%- include('./partials/bootstrap'); %>
