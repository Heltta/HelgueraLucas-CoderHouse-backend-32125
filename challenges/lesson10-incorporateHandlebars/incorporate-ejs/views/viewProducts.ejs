
<%- include('./partials/document'); %>
<%- include('./partials/pageTitle',{ pageName:"Vista de productos"}); %>
<section class="p-5">
    {{#if listExists}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>
                {{#each items}}
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td><img src={{this.thumbnail}} alt={{this.title}} width="64" height="64"></img></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
    <p class="bg-warning border border-warning rounded p-2" style="--bs-bg-opacity: .2;">
        No se encontraron items
    </p>
    {{/if}}
    <%- include('./partials/redirectBtn',{ link:"/", name:"Ingresar productos"}); %>
</section>

<%- include('./partials/bootstrap'); %>
