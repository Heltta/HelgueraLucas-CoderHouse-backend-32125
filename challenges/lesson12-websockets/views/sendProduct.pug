//- main layout
extends ./layouts/index.pug
//- partials (mixins)
include partials/pageTitle.pug
include partials/redirectBtn.pug

block headerScripts
    <script src="/socket.io/socket.io.js"></script>

block content
    //- form subir archivo 
    +title("Ingresar productos")
    form(action="/productos" method="post" class="p-5" id="addProdForm")
        div(class="row mb-3")
            label(for="title"  class="form-label") Title
            input(type="text" name="title" id="title" class="form-control")

        div(class="row mb-3")
            label(for="price"  class="form-label") Price
            input(type="text" name="price" id="price" class="form-control")

        div(class="row mb-3")
            label(for="thumbnail"  class="form-label") thumbnail
            input(type="text" name="thumbnail" id="thumbnail" class="form-control")

        div
            button(type="submit" class="btn btn-primary") Subir
            +rdirBtn("Ver productos", "/productos")
            +rdirBtn("Chat", "/chat")
    
    section(class="p-5" id="products")

    script(src="/websocket/itemList.js")
